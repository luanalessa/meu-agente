generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paciente {
  id               Int       @id @default(autoincrement())
  nome             String
  dataNascimento   DateTime
  telefoneWhatsapp String    @unique
  bairro           String?
  cidade           String?
  estado           String?
  criadoEm         DateTime  @default(now())

  consultas        Consulta[]
  receitas         ReceitaMedica[]
  logsWhatsApp     LogInteracaoWhatsApp[]
  filaEntradas     FilaEspera[]
}

model Consulta {
  id                Int       @id @default(autoincrement())
  pacienteId        Int
  tipoConsulta      String
  origemSolicitacao String   // "whatsapp", "painel_foto", "painel_voz", "painel_manual"
  status            String   // "solicitada", "agendada", "atendida", "cancelada_paciente", ...
  prioridade        String?  // "normal", "prioridade", "urgencia"
  dataSolicitacao   DateTime @default(now())
  dataAgendada      DateTime?
  dataAtendimento   DateTime?

  paciente          Paciente @relation(fields: [pacienteId], references: [id])
}

model ReceitaMedica {
  id            Int      @id @default(autoincrement())
  pacienteId    Int
  consultaId    Int?
  dataEnvio     DateTime @default(now())
  urlImagem     String
  textoExtraido String?
  status        String   // "pendente", "validada", "duvida", "recusada"

  paciente      Paciente @relation(fields: [pacienteId], references: [id])
}

model LogInteracaoWhatsApp {
  id           Int      @id @default(autoincrement())
  pacienteId   Int?
  telefone     String
  tipoMensagem String   // "texto", "audio", "imagem"
  intent       String?  // "agendar_consulta", "enviar_receita", etc.
  sucesso      Boolean  @default(false)
  criadoEm     DateTime @default(now())

  paciente     Paciente? @relation(fields: [pacienteId], references: [id])
}

model FilaEspera {
  id            Int       @id @default(autoincrement())
  pacienteId    Int
  tipoServico   String    // "consulta", "exame", "procedimento"
  especialidade String?
  dataEntrada   DateTime  @default(now())
  dataSaida     DateTime?
  motivoSaida   String?   // "atendido", "desistiu", "encaminhado"
  prioridade    String?   // "normal", "prioridade", "urgencia"
  status        String    // "em_espera", "atendido", "desistiu", "encaminhado"

  paciente      Paciente  @relation(fields: [pacienteId], references: [id])
}
